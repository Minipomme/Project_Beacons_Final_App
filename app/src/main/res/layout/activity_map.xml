<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beacon.projetco.dii.polytech.tours.univ.beaconsfinder.MapActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/selectGoals"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_my_location_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="165dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/FixedBeaconOne"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="373dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/FixedBeaconTwo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="373dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/FixedBeaconThree"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="373dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/FixedBeaconFour"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="373dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/goal1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="259dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/goal2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="259dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/goal3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/goal2"
        android:src="@drawable/ic_place_black_24dp"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="259dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
