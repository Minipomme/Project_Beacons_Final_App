<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beacon.projetco.dii.polytech.tours.univ.beaconsfinder.MonitoringActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ButtonValidate"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:text="Place yourself 1 meter from the beacon.\n Wait 10 seconds then confirm :" />

    <Button
        android:id="@+id/ButtonValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onRangingClicked"
        android:text="Confirm" />

</RelativeLayout>
